<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <!-- Simulation Hack: Hardcode path because Pkg property generation is flaky in local
        restore -->
        <BunZipPath>$(NuGetPackageRoot)/equantic.ui.runtime.osx64/1.0.0-dev/tools/bun/bun-darwin.zip</BunZipPath>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="../../src/eQuantic.UI.Core/eQuantic.UI.Core.csproj" />
        <ProjectReference Include="../../src/eQuantic.UI.Components/eQuantic.UI.Components.csproj" />
        <ProjectReference Include="../../src/eQuantic.UI.Server/eQuantic.UI.Server.csproj" />
        <ProjectReference Include="../../src/eQuantic.UI.Tailwind/eQuantic.UI.Tailwind.csproj" />
        <!-- Sdk might still need to be a PackageReference if it's a tool, but for now let's see -->
        <PackageReference Include="eQuantic.UI.Sdk" Version="1.0.0-dev" />
        <PackageReference Include="eQuantic.UI.Runtime.Osx64" Version="1.0.0-dev"
            GeneratePathProperty="true" Condition="$([MSBuild]::IsOSPlatform('OSX'))" />
    </ItemGroup>

</Project>