<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <!-- Simulation Hack: Hardcode path because Pkg property generation is flaky in local
        restore -->
        <BunZipPath>$(NuGetPackageRoot)/equantic.ui.runtime.osx64/1.0.0-dev/tools/bun/bun-darwin.zip</BunZipPath>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="eQuantic.UI.Core" Version="1.0.0-dev" />
        <PackageReference Include="eQuantic.UI.Components" Version="1.0.0-dev" />
        <PackageReference Include="eQuantic.UI.Server" Version="1.0.0-dev" />
        <PackageReference Include="eQuantic.UI.Sdk" Version="1.0.0-dev" PrivateAssets="all" />
        <PackageReference Include="eQuantic.UI.Runtime.Osx64" Version="1.0.0-dev"
            GeneratePathProperty="true" Condition="$([MSBuild]::IsOSPlatform('OSX'))" />
        <PackageReference Include="eQuantic.UI.Tailwind" Version="1.0.0-dev" PrivateAssets="all" />
    </ItemGroup>

</Project>